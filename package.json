{
  "name": "google-calendar-widget",
  "version": "2.1.0",
  "description": "WordPress plugin for displaying Google Calendar events in a widget",
  "main": "assets/js/dist/google-calendar-widget.js",
  "types": "assets/js/dist/google-calendar-widget.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --no-warn-ignored \"assets/js/**/*.{js,ts}\"",
    "lint:fix": "eslint --fix --no-warn-ignored \"assets/js/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit",
    "build": "tsc && npm run lint && npm run test",
    "build:ts": "tsc",
    "watch": "tsc --watch",
    "zip": "mkdir -p dist && zip -r dist/google-calendar-widget.zip . -x '*.git*' 'node_modules/*' 'dist/*' '.vscode/*' '.DS_Store'",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "start": "npm run build:ts && npm run watch"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.php": [
      "composer run-script phpcbf"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasvincent/google-calendar-widget.git"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "google",
    "calendar",
    "widget"
  ],
  "author": "Thomas Vincent",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/thomasvincent/google-calendar-widget/issues"
  },
  "homepage": "https://github.com/thomasvincent/google-calendar-widget#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
