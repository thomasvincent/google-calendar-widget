# Google JavaScript/TypeScript Style Guide EditorConfig
# https://google.github.io/styleguide/jsguide.html
# https://google.github.io/styleguide/tsguide.html

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 80

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false